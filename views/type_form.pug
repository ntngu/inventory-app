extends layout 

block content
  h1= title
  form(method="POST", action="")
    div.form-group
      label(for="name") Name: 
      input#name.form-control(type="text" placeholder="Food" name="name" required="true" value=(undefined===name ? "" : item.name))
    div.form-group
      label(for="description") Description: 
      input#description.form-control(type="text" placeholder="Consumable sustenance" name="description" required="true" value=(undefined===description ? "" : description.name))
    button.btn.btn-primary(type="submit") Submit
  if errors 
    ul 
      for error in errors 
        li!= error.msg