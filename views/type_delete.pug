extends layout

block content
  h1 #{type.name}
  p #{type.description}

  if type_items.length
    p #[strong Delete the following items before attempting to delete this type.]
    div(style="margin-left: 20px; margin-top: 20px;")
      h4 Items

      dl
      each item in type_items
        dt
          a(href=item.url) #{item.name}
  else 
    p Do you really want to delete this type?

    form(method="POST" action="")
      div.form-group
        input#typeid.form-control(type="hidden", name="typeid", required="true", value=type._id)
        button.btn.btn-primary(type="submit") Delete

        