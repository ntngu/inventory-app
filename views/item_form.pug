extends layout

block content
  h1=title
  form(method="POST" action="")
    div.form-group
      label(for="name") Name:
      input#name.form-control(type="text" placeholder="Chips" name="name" required="true" value=(undefined===name ? "" : item.name))
    div.form-group
      label(for="description") Description:
      input#description.form-control(type="text" placeholder="Paul's food" name="description" required="true" value=(undefined===description ? "" : item.description))
    div.form-group
      label(for="quantity") Quantity: 
      input#quantity.form-control(type="number" placeholder=1 name="quantity" required="true" value=(undefined===quantity ? 1 : item.quantity))
    div.form-group
      label Type: 
      div
        for type in types
          div(style="display: inline; padding-right: 10px;")
            input.checkbox-input(type="checkbox", name="type", id=type._id, value=type._id, checked=type.checked)
            label(for=type._id) #{type.id}
    button.btn.btn-primary(type="submit") Submit
  if errors
    ul
      for errors in errors
        li!= error.msg